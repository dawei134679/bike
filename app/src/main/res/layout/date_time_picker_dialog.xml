<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <DatePicker
                android:id="@+id/datepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:headerBackground="@color/xinyong"
                android:yearListSelectorColor="@color/xinyong"
                android:yearListItemTextAppearance="@color/xinyong"
                android:calendarTextColor="@color/xinyong"
                android:dayOfWeekBackground="@color/xinyong"
                android:dayOfWeekTextAppearance="@color/xinyong"
                android:headerDayOfMonthTextAppearance="@color/xinyong"
                android:headerMonthTextAppearance="@color/xinyong"
                android:headerYearTextAppearance="@color/xinyong"


                />

            <TimePicker
                android:id="@+id/timepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>