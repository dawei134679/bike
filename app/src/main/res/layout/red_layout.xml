<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:id="@+id/id_gift_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/coupon1"
        android:layout_marginLeft="@dimen/x25"
        android:layout_marginRight="@dimen/x25"
        android:layout_marginTop="@dimen/x15_dp"

        />

    <TextView
        android:id="@+id/id_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="碧螺塔 红包"
        android:textSize="@dimen/x18_sp"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/x55"
        android:layout_marginTop="@dimen/x35"
        />
    <TextView
        android:id="@+id/id_gift_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有效期至：2017-12-31"
        android:textSize="@dimen/x13_sp"
        android:textColor="@color/white"
        android:layout_below="@id/id_gift_name"
        android:layout_alignLeft="@id/id_gift_name"
        android:layout_marginTop="@dimen/x15_dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x55"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/x15_dp"
        >


      <TextView
          android:id="@+id/id_gift_money"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="5"
          android:textColor="@color/white"
          android:textSize="@dimen/x40"
          android:layout_alignParentRight="true"

          android:gravity="center"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/x7"
          />

      <TextView
          android:id="@+id/id_gift_user"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="满20可用"
          android:textColor="@color/white"
          android:textSize="@dimen/x13_sp"

          />




    </LinearLayout>












</RelativeLayout>
