<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_backgroud"

    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fitsSystemWindows="true"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
        <ImageView
            android:id="@+id/id_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/returnn"
            android:paddingRight="@dimen/x55"
            />

        <TextView
            android:id="@+id/id_title_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于酷游"
            android:textSize="@dimen/app_text_content"
            android:textColor="@color/x3"
            android:layout_gravity="center"

            />

    </android.support.v7.widget.Toolbar>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/id_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版本：1.6.0"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="2dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x78"
        android:background="@drawable/yuan_white_shape"
        android:layout_marginRight="@dimen/x15_dp"
        android:layout_marginLeft="@dimen/x15_dp"
        >
        <RelativeLayout
            android:id="@+id/id_about_one"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/x15_dp"
            android:layout_marginRight="@dimen/x15_dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信公众号"
                android:textColor="@color/x3"
                android:textSize="@dimen/x15_text_main"

              android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="酷游共享单车"
                android:textColor="@color/xinyong"
                android:textSize="@dimen/x15_dp"

                android:layout_alignParentRight="true"

                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/eee"
            android:layout_below="@id/id_about_one"
            >

        </View>

        <RelativeLayout
            android:id="@+id/id_about_two"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/x15_dp"
            android:layout_marginRight="@dimen/x15_dp"
            android:layout_below="@id/id_about_one"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textColor="@color/x3"
                android:textSize="@dimen/x15_text_main"

                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/id_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4006789819"
                android:textColor="@color/xinyong"
                android:textSize="@dimen/x15_dp"

                android:layout_alignParentRight="true"

                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/eee"
            android:layout_below="@id/id_about_two"
            >

        </View>

        <RelativeLayout
            android:id="@+id/id_about_three"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/x15_dp"
            android:layout_marginRight="@dimen/x15_dp"
            android:layout_below="@id/id_about_two"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子邮箱"
                android:textColor="@color/x3"
                android:textSize="@dimen/x15_text_main"

                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="public@coolubike.com"
                android:textColor="@color/xinyong"
                android:textSize="@dimen/x15_dp"

                android:layout_alignParentRight="true"

                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/eee"
            android:layout_below="@id/id_about_three"
            >

        </View>

        <RelativeLayout
            android:id="@+id/id_about_four"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/x15_dp"
            android:layout_marginRight="@dimen/x15_dp"
            android:layout_below="@id/id_about_three"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="官方网站"
                android:textColor="@color/x3"
                android:textSize="@dimen/x15_text_main"

                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.coolubike.com"
                android:textColor="@color/xinyong"
                android:textSize="@dimen/x15_dp"

                android:layout_alignParentRight="true"

                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/eee"
            android:layout_below="@id/id_about_four"
            >

        </View>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秦皇岛酷游科技有限公司"
            android:textColor="@color/x3"
            android:textSize="@dimen/x13_sp"

            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            />

    </RelativeLayout>







</LinearLayout>
