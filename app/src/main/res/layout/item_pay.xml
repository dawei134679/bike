<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_pay_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退款成功"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/item_pay_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_pay_status"
        android:layout_marginTop="5dp"
        android:text="2017-01-01 00:00:00"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/item_pay_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/item_pay_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付宝"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/item_pay_money"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />
</RelativeLayout>