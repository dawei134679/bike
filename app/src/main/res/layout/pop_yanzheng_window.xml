<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/transparent"
    >


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/ccc"
            android:padding="1dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安全验证"
                    android:textColor="@color/monet_card_text"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:id="@+id/iv_pop_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/yanzheng_close"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/main_backgroud"
                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请填写图中验证码"
                android:textColor="@color/monet_card_text"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/x15_dp"
                android:layout_marginLeft="@dimen/x10"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/x10"
                >
                <EditText
                    android:id="@+id/et_two_code"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:hint="验证码"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:background="@drawable/line_gray_yangzheng_layer"
                    android:padding="5dp"
                    />
                <ImageView
                    android:id="@+id/iv_two_code"
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/tv_two_code_huan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="换一张"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/x10"
                    />
                
            </LinearLayout>


                <TextView
                    android:id="@+id/tv_two_code_true"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="确定"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_button"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_marginBottom="@dimen/x10"
                    />

            </LinearLayout>
        </LinearLayout>



</LinearLayout>