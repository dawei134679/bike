<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <com.amap.api.maps.MapView
       android:id="@+id/mapview"
       android:layout_width="match_parent"
       android:layout_height="match_parent"

       >

   </com.amap.api.maps.MapView>

   <ImageView
       android:id="@+id/id_image_center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/location"
       android:layout_alignParentLeft="true"
       android:layout_alignParentBottom="true"
       android:layout_marginLeft="20dp"
       android:layout_marginBottom="20dp"
       />

   <ImageView
       android:id="@+id/id_image_refresh"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/refresh"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:layout_marginLeft="20dp"
       android:layout_marginBottom="70dp"
       android:visibility="gone"
       />


   <ImageView
       android:id="@+id/id_photo_choose"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/repair"
       android:layout_alignParentRight="true"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="20dp"
       android:layout_marginRight="20dp"
       />

   <ImageView
       android:id="@+id/id_action_list"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/main_weixin"
       android:layout_alignParentRight="true"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="80dp"
       android:layout_marginRight="25dp"
       android:visibility="gone"
       />


   <ImageView
       android:id="@+id/id_top_photo"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:scaleType="fitXY"
      android:visibility="gone"
       android:layout_margin="10dp"
       />
    <ImageView
        android:id="@+id/id_action_a2"
        android:layout_width="135dp"
        android:layout_height="38.5dp"
        android:src="@mipmap/ad"
        android:layout_marginTop="67dp"
        android:layout_alignParentRight="true"
       android:scaleType="fitXY"
         android:visibility="gone"

        />
   <ImageView
       android:id="@+id/id_action_a1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/ad1"
       android:layout_marginTop="60dp"
       android:layout_alignParentRight="true"

       />




      <LinearLayout
          android:id="@+id/id_marker_popup"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
         android:background="@color/main_backgroud"
          android:visibility="gone"
          >

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/line_view">

          </View>

         <TextView
             android:id="@+id/id_marker_station"
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:text="站点 : 北戴河湿地公园"
             android:textColor="@color/monet_card_text"
             android:textSize="@dimen/x15_text_main"
             android:gravity="center_vertical"
             android:layout_marginLeft="@dimen/x15_text_main"

             />
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/line"
             android:layout_marginLeft="@dimen/x15_dp"
             android:layout_marginRight="@dimen/x15_dp"
             >
         </View>

         <TextView
             android:id="@+id/id_marker_address"
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:text="地址：河北省秦皇岛市北戴河区滨海大道100号"
             android:textColor="@color/monet_card_text"
             android:textSize="@dimen/x15_text_main"
             android:layout_marginLeft="@dimen/x15_dp"
             android:gravity="center_vertical"
             />

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/line"
             android:layout_marginLeft="@dimen/x15_dp"
             android:layout_marginRight="@dimen/x15_dp"
             >
         </View>

         <LinearLayout

             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >

            <TextView
                android:id="@+id/id_marker_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1111 米"
                android:textColor="@color/money_red"
                android:textSize="@dimen/x20_sp"

                android:layout_marginTop="@dimen/x20_main"
              android:gravity="center"

                />
            <TextView
                android:id="@+id/id_marker_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2222分钟"
                android:textColor="@color/money_red"
                android:textSize="@dimen/x20_sp"

                android:layout_marginTop="@dimen/x20_main"
                android:gravity="center"
                />
         </LinearLayout>
         <LinearLayout

             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="距离起始位置"
                android:textColor="@color/monet_card_text"
                android:textSize="@dimen/x20_sp"
                android:gravity="center"
                android:layout_marginTop="@dimen/x10"
               android:paddingBottom="@dimen/x10"

                />
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="骑行可到达"
                android:textColor="@color/monet_card_text"
                android:textSize="@dimen/x20_sp"
                android:gravity="center"
                android:layout_marginTop="@dimen/x10"
                android:paddingBottom="@dimen/x20_main"
                />
         </LinearLayout>

      </LinearLayout>

   <ImageView
       android:id="@+id/id_scan_zxing"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/scan"
       android:layout_alignBottom="@+id/id_image_center"
       android:layout_centerHorizontal="true" />

