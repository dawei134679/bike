<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20_main"
        android:layout_marginRight="@dimen/x20_main"
        android:background="@drawable/yuan_white_shape"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="购买会员套餐"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/x16_sp" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20_main"
                android:text="10元"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/x16_sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x80"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weixin" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginTop="@dimen/x15_dp"
                    android:layout_marginBottom="@dimen/x15_dp"
                    android:background="@color/line_view" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zhifubao" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_pay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/rb_pay_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:background="@null"
                    android:button="@null"
                    android:checked="true"
                    android:drawableRight="@drawable/radioselector"
                    android:drawablePadding="@dimen/x180"
                    android:text="微信支付"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/x16_sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginTop="@dimen/x15_dp"
                    android:layout_marginBottom="@dimen/x15_dp"
                    android:background="@color/line_view" />

                <RadioButton
                    android:id="@+id/rb_pay_alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:background="@null"
                    android:button="@null"
                    android:drawableRight="@drawable/radioselector"
                    android:drawablePadding="164dp"
                    android:text="支付宝支付"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/x16_sp" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/x15_dp"
        android:layout_marginTop="@dimen/x15_dp"
        android:layout_marginRight="@dimen/x15_dp"
        android:background="@drawable/bg_vip_combo_green"
        android:gravity="center"
        android:text="去支付"
        android:textColor="@color/bg_white"
        android:textSize="14sp" />

</LinearLayout>