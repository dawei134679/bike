<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backgroud"
    tools:context="com.example.admin.drawlayouttest.activity.RenZhengActivity"
    android:orientation="vertical"
    >


    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:fitsSystemWindows="true"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
        <ImageView
            android:id="@+id/id_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/returnn"
            android:paddingRight="@dimen/x55"
            />

        <TextView
            android:id="@+id/id_title_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份认证"
            android:textSize="18sp"
            android:textColor="@color/monet_card_text"
            android:layout_gravity="center"

            />
        <TextView
            android:id="@+id/id_person_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证"
            android:textSize="18dp"
            android:textColor="@color/monet_card_text"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"

            />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名："
        android:textSize="@dimen/x16_sp"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginLeft="@dimen/x15_dp"
        />

    <RelativeLayout
        android:id="@+id/id_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/input1"
        android:layout_marginRight="@dimen/x15_dp"
        android:layout_marginLeft="@dimen/x15_dp"
        android:layout_marginTop="@dimen/x15_dp"

        >

        <EditText
            android:id="@+id/id_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x15_text_main"
            android:layout_marginLeft="@dimen/x15_dp"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/x20_main"
            android:background="@null"

            android:textColorHint="@color/white"
            />

        <ImageView
            android:id="@+id/id_person_name_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/clse"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x15_dp"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/x15_dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身份证号："
        android:textSize="@dimen/x16_sp"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginLeft="@dimen/x15_dp"
        />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/input1"
        android:layout_marginRight="@dimen/x15_dp"
        android:layout_marginLeft="@dimen/x15_dp"
        android:layout_marginTop="@dimen/x15_dp"

        >

        <EditText
            android:id="@+id/id_person_shen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x15_text_main"
            android:layout_marginLeft="@dimen/x15_dp"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/x20_main"
            android:background="@null"
            android:textColorHint="@color/white"
            android:inputType="number"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/id_person_shen_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/clse"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x15_dp"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/x15_dp"
            />
    </RelativeLayout>

</LinearLayout>
