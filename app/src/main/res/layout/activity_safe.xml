<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backgroud"
   >

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:id="@+id/id_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/returnn"
            android:paddingRight="@dimen/x55"
            />

        <TextView
            android:id="@+id/id_title_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退保证金"
            android:textSize="18sp"
            android:textColor="@color/monet_card_text"
            android:layout_gravity="center_horizontal"


            />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/id_safe_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/deposit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x140"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/id_safe_img"
        >
        <TextView
            android:id="@+id/id_safe_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否确定将你的保证金退回"
            android:textSize="@dimen/app_text_content"
            android:textColor="@color/safe"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/x35"


            />
        <TextView
            android:id="@+id/id_active_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜你"
            android:textSize="@dimen/app_text_content"
            android:textColor="@color/x3"
           android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/x50"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/id_active_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="酷游畅游卡兑换成功"
            android:textSize="@dimen/app_text_content"
            android:textColor="@color/x3"
           android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/x30"
            android:visibility="gone"

            />
        <TextView
            android:id="@+id/id_active_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="酷游会员激活成功"
            android:textSize="@dimen/app_text_content"
            android:textColor="@color/x3"
           android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/x10"
            android:visibility="gone"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/x17"
        android:layout_marginLeft="@dimen/x15_dp"
        android:layout_marginRight="@dimen/x15_dp"

        >

        <ImageView
            android:id="@+id/id_safe_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/yes"
            android:layout_weight="1"
            android:layout_gravity="center"
            />


        <ImageView
            android:id="@+id/id_safe_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/no"
            android:layout_weight="1"
            android:layout_gravity="center"

            />


    </LinearLayout>




</RelativeLayout>
